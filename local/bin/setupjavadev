#!/bin/bash
#
# Written by Yasuharu Mizutani.
# Modified by Hiroshi Igaki

usage(){
    cat <<-EOF
	
	使い方:
	    setup${CLASSNAME}
	
	~/kadai/$COURSEYEAR/を更新する．
	
	EOF
}

GB='\e[1;32m'
GE='\e[m'
RB='\e[1;31m'
RE='\e[m'

if [ "$#" -ge 1 ]; then
    case "$1" in
        -h|-help|--help)
            usage
            exit 0
            ;;
        -v|-version)
            echo 20200428
            exit 0
            ;;
        *)
            usage
            exit 1
            ;;
    esac
fi

echo "~/kadai/${COURSEYEAR}/を更新します．"
cd /home
if [ ! -e /home/${CLASSNAME}/$COURSEYEAR ]; then
  initgitrepo
fi
cd /home/${CLASSNAME}
git pull origin master &>/dev/null

if [ $? -ne 0 ]; then
    echo "開発環境データのダウンロードに失敗しました．"
    echo "ネットワーク接続を確認し，コマンドを再実行して下さい．"
    exit 1
fi

rsync --timeout=15 -a -zz /home/${CLASSNAME}/$COURSEYEAR/ ~/kadai/${COURSEYEAR}/
