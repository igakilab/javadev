#!/bin/bash
#
# Written by Yasuharu Mizutani.
# Modified by Hiroshi Igaki

usage(){
    cat <<-EOF
	
	使い方:
	    setup${CLASSNAME}
	
	~/kadai/$COURSEYEAR/を更新する．
	
	EOF
}

GB='\e[1;32m'
GE='\e[m'
RB='\e[1;31m'
RE='\e[m'

if [ "$#" -ge 1 ]; then
    case "$1" in
        -h|-help|--help)
            usage
            exit 0
            ;;
        -v|-version)
            echo 20200428
            exit 0
            ;;
        *)
            usage
            exit 1
            ;;
    esac
fi

echo "~/kadai/${COURSEYEAR}/を更新します．"
cd /home
if [ -d /home/${CLASSNAME} ]; then
  rm -rf /home/${CLASSNAME}
fi
git clone "https://github.com/igakilab/${CLASSNAME}.git"
rsync --timeout=15 -a -zz /home/${CLASSNAME}/$COURSEYEAR/ ~/kadai/${COURSEYEAR}/
rm -rf /home/${CLASSNAME}